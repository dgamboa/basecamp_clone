<div class='row'>
  <h1>Your Projects</h1>
  <table class='table table-striped'>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
    <% @projects.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.description %></td>
      <td><%= link_to 'Show', project %> |
      <%= link_to 'Edit', edit_project_path(project) %> |
      <%= link_to 'Destroy', project, method: :delete %></td>
    </tr>
    <% end %>
  </table>

  <%= link_to 'Create new project', new_project_path %>
</div>
